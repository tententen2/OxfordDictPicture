<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_viewHolder"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="@drawable/ripple_color"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dimenMediumSpacing"
        android:layout_marginBottom="@dimen/dimenMediumSpacing"
        android:layout_marginLeft="@dimen/dimenMediumSpacing"
        android:layout_marginRight="@dimen/dimenMediumSpacing"
        android:textSize="20sp" />

</LinearLayout>